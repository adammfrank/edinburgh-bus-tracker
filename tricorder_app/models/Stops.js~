var mongoose = require('mongoose');

var StopSchema = new mongoose.Schema({
    stop_id: Number,
    name: String,
    identifier: String,
    locality: String,
    orientation: Number,
    direction: String,
    latitude: Number,//I think this will work for floats
    longitde: Number,
    destinations: { type: Array, "default": []},//Is this right?
    services: {type: Array, "default": []}//???
});

